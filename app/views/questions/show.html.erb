<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<p>
  <strong>Upvotes:</strong>
  <%= @question.upvotes %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @question.user.name, profile_path(@question.user) %>
</p>

<h2>Answers</h2>
<% @question.answers.each do |answer| %>
  <p>
    <strong>By:</strong>
    <%= link_to answer.user.name, profile_path(answer.user) %>
  </p>

  <p>
    <strong>Answer:</strong>
    <%= answer.content %>
  </p>
  <p><strong>Upvotes:</strong>
    <%= answer.upvotes %>
<% end %>

<h2>Add a answer:</h2>
<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% if @question.user == @current_user %>
<%= link_to 'Edit', edit_question_path(@question) %> |
<% end %>
<%= link_to 'Back', questions_path %>
